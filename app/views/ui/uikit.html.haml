    .row
      .col-lg-6
        .panel
          .panel-body
            .row
              .col-sm-6
                .inner
                  %form(role="form")
                    .form-group
                      %label.sr-only(for="") 帳號
                      %input.form-control(type="text" placeholder="用戶帳號")
                    .form-group
                      %label.sr-only(for="") 密碼
                      %input.form-control(type="password" placeholder="密碼")
                    .checkbox
                      %label
                        %input#check-1(type="checkbox") 記住我
                        %label(for="check-1")
                    %button.btn.btn-info.btn-block(type="button") 登入
              .col-sm-6.left-line
                .inner

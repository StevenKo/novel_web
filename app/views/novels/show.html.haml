= content_for :head do
  <title>#{@novel.name} -- #{@category.name} | 小說王搜集各類小說 |小說網站 </title>
  <meta name="description" content="#{@novel.description}">
  <meta name="keywords" content="#{@novel.name},#{@category.name},#{@novel.author}">

#push-container 

  = render 'shared/header'

  %section#page.dark-bg
    .container
      = render 'shared/sidebar'
      %section.right-wrapper.full.col-xs-12.col-sm-10
        %ol.breadcrumb.row.full
          %li
            = link_to "首頁", root_path
          %li
            = link_to @category.name, category_path(@category)
          %li
            = link_to @novel.name, category_novel_path(@category,@novel)
        .content
          .row.pane
            .col-sm-4
              .pane_img
                = image_tag @novel.pic , :class => "img-responsive"
            .col-sm-8
              .pane_detail
                %h4.title.title_book #{@novel.name}
                %p #{@novel.description}
                %hr
                %button.btn.btn-default.btn-sm(type="button")
                  %i.fa.fa-user.fa-fw 
                  #{@novel.author}
                %button.btn.btn-info.btn-sm(type="button")
                  %i.fa.fa-plus.fa-fw 
                  點擊閱讀
          .content-body
            %hr
            .row
              .col-md-4
                %ul.list-group.panel
                  - @articles[0].each do |article|
                    %li.list-group-item
                      = link_to article.subject + " :"+article.title, novel_article_path(@novel,article)
              .col-md-4
                %ul.list-group.panel
                  - @articles[1].each do |article|
                    %li.list-group-item
                      = link_to article.subject + " :"+article.title, novel_article_path(@novel,article)

              .col-md-4
                %ul.list-group.panel
                  - @articles[2].each do |article|
                    %li.list-group-item
                      = link_to article.subject + " :"+article.title, novel_article_path(@novel,article)

  = render 'shared/footer'

= render 'shared/mobile'
= content_for :head do
  <title>各類別小說 | 小說王搜集各類小說 |小說網站 </title>
  <meta name="description" content="全部類別小說">
  <meta name="keywords" content="#{Category.all.map{|c| c.name}.join(",")}">

#push-container 

  = render 'shared/header'

  %section#page.dark-bg
    .container
      = render 'shared/sidebar'
      %section.right-wrapper.full.col-xs-12.col-sm-10
        %ol.breadcrumb.row.full
          %li
            = link_to "首頁", root_path
          %li
            = link_to "全部分類", categories_path
        .content
          .content-body
            .row
              = render partial: 'novels/novel_for_category', collection: @novels, as: :novel
        #with-button
          = will_paginate @novels

        - if @novels.next_page
          .center-div
            #load-more-btn.btn.btn-primary.btn-lg.load-more 更多小說

  = render 'shared/footer'

= render 'shared/mobile'
#push-container 

  = render 'shared/header'

  %section#page.dark-bg
    .container
      = render 'shared/sidebar'
      %section.right-wrapper.full.col-xs-12.col-sm-10
        %ol.breadcrumb.row.full
          %li
            %a{:href => "/"} 首頁
          %li
            = link_to "作者介紹",author_path(params[:id])
        .content
          .panel.author_panel
            .author_panel-top
              = image_tag "top_cover.jpg", :class => "img-responsive "
              = image_tag "avatar.jpg", :class => "img-responsive avatar img-circle"
              .author_panel-info
                %h5.author
                  %i.fa.fa-fw.fa-user
                  #{params[:id]}
            .panel-body
              %h5.title.title_panel 作者介紹
              %p.desc 目前沒有作者詳細資料
              .row.author_panel-book-wrapper
                .box_wrapper
                  = render @novels
              
         
  = render 'shared/footer'

= render 'shared/mobile'